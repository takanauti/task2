<h1>Books</h1>

<% @books.each do |book| %>
<table>
  <p>Title</p>
  <%= link_to book.title, book_path(book.id) %>
  
  <p>Body</p>
   <%= link_to book.title, book_path(book.id) %>
   
   
  
  

</table>
<% end %>

<h2>New book</h2>
<%= form_with model:@book,url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>